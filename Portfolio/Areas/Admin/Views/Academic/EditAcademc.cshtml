@model List<Academic>

<h2>Edit Academic</h2>
<div class="col-1">
    <a asp-controller="Academic" asp-action="Index" class="btn btn-outline-secondary form-control">Back to Academic
        List</a>
</div>
<br />
<div class="col-1">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary form-control">Back to
        Admin</a>
</div>
<br />

<div class="col-6">
    <a asp-controller="Academic" asp-action="Create" class="btn btn-primary form-control">Create</a>
</div>
<br />




@foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
{
    <li>
        <a asp-area="Client" asp-controller="Academic" asp-action="AcademicDetails" asp-route-id="@obj.AcademicId">
            <div>
                <p>@obj.Image</p>
                <p>@obj.Title</p>
            </div>
            <div class="col-6">
                <a asp-area="Admin" asp-controller="Academic" asp-action="Edit" asp-route-id="@obj.AcademicId"
                    class="btn btn-primary form-control">Edit</a>
            </div>
            <br />

            <div class="col-6">
                <a asp-area="Admin" asp-controller="Academic" asp-action="Delete" asp-route-id="@obj.AcademicId"
                    class="btn btn-Delete form-control">Delete</a>
            </div>
            <br />
        </a>
    </li>
}