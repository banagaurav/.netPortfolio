@model Photo

<form method="post">
    <input asp-for="PhotoId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Photo</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Caption"></label>
            <input asp-for="Caption" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Category"></label>
            <input asp-for="Category" disabled class="form-control" />

        </div>
        <div class="mb-3 row">
            <label asp-for="Image"></label>
            <input asp-for="Image" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="UploadTime"></label>
            <input asp-for="UploadTime" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" disabled class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Delete</button>

            </div>
            <div class="col-6">
                <a asp-controller="Album" asp-action="EditAlbum" class="btn btn-outline-secondary form-control">Back
                    to
                    Photo</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}